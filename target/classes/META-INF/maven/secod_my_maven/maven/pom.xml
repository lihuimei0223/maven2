	<!-- 引用的插件 ， 从Effective pom中找到的，执行xml,去除不执行的java -->
	<build>
		<plugins>
			<plugin>

				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.12.4</version>
				<configuration>

					<excludes>
						<exclude>
							${project.basedir}/src/test/java/secod_my_maven、maven/AppTest.java
						</exclude>
					</excludes>

					<sureXmlFiles>
						<sureXmlFile>
							${project.basedir}/src/test/java/com/selenium/test/LoginTest.xml
						</sureXmlFile>
					</sureXmlFiles>
				</configuration>

			</plugin>
		</plugins>
	</build>



